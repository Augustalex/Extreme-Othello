<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="/boardGameLibrary/viewModel/main.css" id="gameViewWindow">
    <top>
        <BorderPane id="gameTitle">
            <left>
                <Label text="AUGUST" />
            </left>
            <center>
                <Label text="V.S." />
            </center>
            <right>
                <Label text="BJORN" />
            </right>
        </BorderPane>
    </top>
    <center>
        <HBox fx:id="gameBoardContainer" id="gameBoardContainer" >
