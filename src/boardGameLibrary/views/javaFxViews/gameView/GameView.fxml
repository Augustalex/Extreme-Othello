<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="/boardGameLibrary/viewModel/main.css" id="gameViewWindow">
    <top>
        <BorderPane id="gameTitle">
            <left>
                <Label text="LAST HUMAN" />
            </left>
            <center>
                <Label text="V.S." />
            </center>
            <right>
                <Label text="S.K.Y.N.E.T" />
            </right>
        </BorderPane>
    </top>
    <center>
        <HBox fx:id="gameBoardContainer" id="gameBoardContainer" >
        </HBox>
    </center>
    <bottom>
        <BorderPane id="gameViewStatusBar">
            <left>
                <Label text="Available move" />
            </left>
            <right>
                <Label text="Stats here" />
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
